@page "/"

<h1 class="text-3xl font-bold text-blue-600 mb-6">Dashboard Overview</h1>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <MudCard Class="p-4">
        <MudCardContent>
            <MudText Typo="Typo.subtitle1">Users</MudText>
            <MudText Typo="Typo.h5" Color="Color.Primary">1,204</MudText>
        </MudCardContent>
    </MudCard>

    <MudCard Class="p-4">
        <MudCardContent>
            <MudText Typo="Typo.subtitle1">Revenue</MudText>
            <MudText Typo="Typo.h5" Color="Color.Success">$18,760</MudText>
        </MudCardContent>
    </MudCard>

    <MudCard Class="p-4">
        <MudCardContent>
            <MudText Typo="Typo.subtitle1">Sessions</MudText>
            <MudText Typo="Typo.h5" Color="Color.Error">412</MudText>
        </MudCardContent>
    </MudCard>
</div>

