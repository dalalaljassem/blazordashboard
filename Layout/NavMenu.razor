@using BlazorDashboardClean.Layout
<MudNavMenu Class="flex flex-col justify-between p-2 h-screen">
    <!-- Top links -->
    <div>
        <MudStack Spacing="1">
            <NavMenuLinks Content="Dashboard" Href="/" Icon="@Icons.Material.Rounded.Dashboard"
                Match="NavLinkMatch.All" />
            <NavMenuLinks Content="Counter" Href="/counter" Icon="@Icons.Material.Rounded.AddCircle"
                Match="NavLinkMatch.Prefix" />
            <NavMenuLinks Content="Weather" Href="/weather" Icon="@Icons.Material.Rounded.WbSunny"
                Match="NavLinkMatch.Prefix" />
            <NavMenuLinks Content="Settings" Href="/settings" Icon="@Icons.Material.Rounded.Settings"
                Match="NavLinkMatch.Prefix" />
        </MudStack>
    </div>

    <!-- Sign Out pinned to bottom -->
    <div class="pt-4 border-t light-gray">
        <NavMenuLinks Content="Sign Out" Href="/logout" Icon="@Icons.Material.Rounded.Logout"
            Match="NavLinkMatch.All" />
    </div>
</MudNavMenu>
